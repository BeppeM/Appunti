
public class Mappa implements ISupervisore {

	private int maxX;
	private int minX;
	private int maxY;
	private int minY;
	private PuntoXY obiettivo;
	
	public Mappa(int minX, int maxX, int minY, int maxY, PuntoXY obiettivo) {
		if(minX>maxX || minY>maxY || obiettivo==null || !this.posizioneValida(obiettivo))
			throw new RobotException();
		this.maxX = maxX;
		this.minX = minX;
		this.maxY = maxY;
		this.minY = minY;
		this.obiettivo = obiettivo;
	}

	@Override
	public boolean posizioneValida(PuntoXY posizione) {
		if(posizione.getX()<maxX || posizione.getX()>minX || posizione.getY()<maxY || posizione.getY()>minY)
			return true;
		else 
			return false;
	}

	@Override
	public boolean obiettivoRaggiunto(PuntoXY posizione) {
		if(posizione.equals(obiettivo))
			return true;
		else
			return false;
	}
	
	
}
