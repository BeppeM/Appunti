package esame;

import java.util.ArrayList;
import java.util.Collection;

public class Villaggio extends AreaAbitabile {

	private Collection<AreaAbitabile> abitazioni;
	
	public Villaggio(String comune, Collection<AreaAbitabile> abitazioni) throws AreaAbitabileException {
		super(comune);
		abitazioni= new ArrayList<AreaAbitabile>();
		if(comune==null|| abitazioni==null)
			throw new AreaAbitabileException();
		for(AreaAbitabile i: abitazioni) {
			if(!i.getComune().equals(comune))
				throw new AreaAbitabileException();
		}
	}

	@Override
	public int getSuperficieTotale() {
		// TODO Auto-generated method stub
		return 0;
	}

}
