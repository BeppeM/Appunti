package esame;
import java.util.ArrayList;
import java.util.List;

public class Villaggio extends AreaAbitabile {

	private List<AreaAbitabile> abitazioni;
	
	public Villaggio(String comune, List<AreaAbitabile> abitazioni) throws AreaAbitabileException{
		super(comune);
		this.abitazioni = new ArrayList<AreaAbitabile>();
		addAreaAbitabile(abitazioni);
	}
	
	@Override
	int getSuperficieTotale() {
		int mq=0;
		
		for(AreaAbitabile aa: abitazioni){
			mq=mq+ aa.getSuperficieTotale();
		}
		
		return mq;
	}
	
	public int numCaseIndipendenti(){
		int nc=0;
		
		for(AreaAbitabile aa: abitazioni){
			if(aa instanceof CasaIndipendente) nc++; 
			if(aa instanceof Villaggio) nc += ((Villaggio) aa).numCaseIndipendenti();
		}
		
		return nc;
	}
	
	public void addAreaAbitabile(AreaAbitabile abitazione) throws AreaAbitabileException{
		if (abitazione==null) throw new AreaAbitabileException();
		if(!abitazione.getComune().equals(comune)) throw new AreaAbitabileException();
		abitazioni.add(abitazione);
	}
	
	public void addAreaAbitabile(List<AreaAbitabile> abitazioni) throws AreaAbitabileException{
		if(abitazioni==null || abitazioni.isEmpty()) throw new AreaAbitabileException();
		for(AreaAbitabile aa: abitazioni){
			addAreaAbitabile(aa);
		}
		
	}



	@Override
	public String toString() {
		String s = super.toString() + " ";
		for(AreaAbitabile aa:abitazioni) {
			s+=aa.toString();
		}
		return s;
	}


	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (!super.equals(obj))
			return false;
		if (getClass() != obj.getClass())
			return false;
		Villaggio other = (Villaggio) obj;
		if (abitazioni == null) {
			if (other.abitazioni != null)
				return false;
		} else if (!abitazioni.equals(other.abitazioni))
			return false;
		return true;
	}
	
	

}
