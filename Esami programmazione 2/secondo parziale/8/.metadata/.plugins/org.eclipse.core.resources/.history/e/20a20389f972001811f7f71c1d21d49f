package esame;

public abstract class AreaAbitabile {
	protected String comune;

	public AreaAbitabile(String comune) throws AreaAbitabileException {
		if(comune==null)
			throw new AreaAbitabileException();
		else
			this.comune = comune;
	}

	public String getComune() {
		return comune;
	}
	
	public abstract int getSuperficieTotale();

	@Override
	public String toString() {
		return "AreaAbitabile [comune=" + comune + ", superficie totale=" + getSuperficieTotale() + "]";
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((comune == null) ? 0 : comune.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (!(obj instanceof AreaAbitabile))
			return false;
		AreaAbitabile other = (AreaAbitabile) obj;
		if (comune == null) {
			if (other.comune != null)
				return false;
		} else if (!comune.equals(other.comune))
			return false;
		return true;
		if(getSuperficieTotale()!=other.getSuperficieTotale())
			return false;
		else
			return true;
	}

	
	 
	
	
}
